<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>add</title>
  <meta name="description" content="">
  <meta name="keywords" content="">
  <link rel="stylesheet" href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="../public/css/style.css" rel="stylesheet">
</head>

<body>
  <div class="container">
    <%- include("./header.ejs") %>
    <div class="form-container">
      <form method="post" action="/add" id="addForm">
        <div class="form-group">
          <label for="exampleInputEmail1">name</label>
          <input type="text" class="form-control" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">like</label>
          <input type="text" class="form-control" name="like" placeholder="like">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
    <%- include("./footer.ejs") %>
  </div>
  <script>
    $(function(){
      $('#addForm').on('submit', function(e){
        e.preventDefault();
        var action = $(this).attr('action');
        var $container = $(this).closest('.form-container');
        $.ajax({
          url: action,
          type: 'POST',
          data: $('#addForm').serialize(),
          success: function(data){
            if(data.result){
              $container.html('<h2>添加成功，请到<a href="/list">列表页</a>查看</h2>');
            } else {
              $container.html('发生了一些意外');
            }
          },
          error: function(){
            $container.html('发生了另一些意外');
          }
        });
      });
    })
  </script>
</body>

</html>